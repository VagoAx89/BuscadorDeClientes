<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuscarCliente.AgregarEvento">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="editor1"
                    Placeholder="Escribe el evento"
                    HeightRequest="300"
                
                      VerticalOptions="Start"
                     HorizontalOptions="FillAndExpand" />
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" Orientation="Horizontal">
                <Button Clicked="Button_Clicked_1" CornerRadius="15" Text="Volver"/>
                <Button Text="Borrar" CornerRadius="15"/>
                <Button Text="Guardar" Clicked="Button_Clicked" CornerRadius="15"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>